# =====================================================

# Enable URL Rewriting
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Block direct access to config files
<FilesMatch "^(config\.php|helpers\.php|\.env|\.htaccess)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to SQL files
<FilesMatch "\.sql$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Clean URLs for API endpoints
# /api/trend?game=wingo_1min -> /api/trend.php?game=wingo_1min
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/([a-z0-9]+)$ api/$1.php [L,QSA]

# Alternative clean URLs
# /wingo/1min -> /api/wingo.php?duration=1min
RewriteRule ^(wingo|k3|5d|trx|numeric)/([0-9]+min?)$ api/$1.php?duration=$2 [L,QSA]

# Security Headers
<IfModule mod_headers.c>
    # =====================================================
    # CRITICAL: Remove ALL existing CSP headers from host/cPanel
    # Some shared hosts inject restrictive CSP that blocks inline styles.
    # We MUST remove them first, then set our own permissive policy.
    # =====================================================
    Header always unset Content-Security-Policy
    Header unset Content-Security-Policy
    Header always unset Content-Security-Policy-Report-Only
    Header unset Content-Security-Policy-Report-Only
    Header always unset X-Content-Security-Policy
    Header unset X-Content-Security-Policy
    Header always unset X-WebKit-CSP
    Header unset X-WebKit-CSP
    
    # Standard Security Headers (non-CSP)
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # =====================================================
    # CSP Policy: Allow inline styles, inline scripts, and data: URIs
    # Required because admin UI uses:
    # - Inline <style> blocks for all CSS
    # - Inline <script> blocks for JS
    # - data:image/svg+xml for icons (CSP-compatible icons)
    # =====================================================
    Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: https:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https:; frame-ancestors 'self'"
</IfModule>

# Enable CORS for API
<IfModule mod_headers.c>
    SetEnvIf Origin "https://(.*\.)?yourdomain\.com$" CORS=$0
    Header set Access-Control-Allow-Origin %{CORS}e env=CORS
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-API-Key"
    Header set Access-Control-Max-Age "86400"
</IfModule>

# Handle OPTIONS preflight
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# PHP Configuration
<IfModule mod_php7.c>
    php_value max_execution_time 60
    php_value memory_limit 128M
    php_value post_max_size 10M
    php_value upload_max_filesize 10M
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
</IfModule>

# Caching for static responses (optional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Rate Limiting (if mod_ratelimit is available)
<IfModule mod_ratelimit.c>
    SetOutputFilter RATE_LIMIT
    SetEnv rate-limit 400
</IfModule>

# Block bad bots and scanners
RewriteCond %{HTTP_USER_AGENT} ^.*(bot|crawl|spider|scan|hack).*$ [NC]
RewriteRule .* - [F,L]

# Protect against common exploits
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
RewriteRule .* - [F,L]
